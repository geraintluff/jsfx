function control_group(text) local(texth, textw, textl, textr, textv) (
	uix_control_theme == 2/*uix_THEME:TRON*/ ? (
		ui_fontsize(16);

		ui_pad2(ui_hpadding()/2, ui_vpadding()/2);

		ui_push();
			ui_color(128, 128, 128);
			gfx_roundrect(ui_left(), ui_top() + 1, ui_width(), ui_height() - 1, 10, 1);
		ui_pop();

		strlen(text) > 0 ? (
			ui_split_bottom(ui_texth() + ui_vpadding()/2);
				ui_color(128, 128, 128);
				ui_border_top();

				ui_color(255, 255, 255);
				ui_align(0.5, 0.5);
				ui_text(text);
			ui_pop();
		);
		ui_pad();
	) : (
		ui_push();
			uix_control_theme == 1/*uix_THEME:BLACK_AND_WHITE*/ ? (
				ui_fontsize(18);
			) : (
				ui_fontsize(16);
			);
			
			texth = textw = 0;
			uix_setgfxfont();
			textw = texth = 0;
			text >= 0 ? gfx_measurestr(text, textw, texth);
			!texth ? texth = gfx_texth;

			// Border color
			uix_control_theme == 1/*uix_THEME:BLACK_AND_WHITE*/ ? (
				ui_color(255, 255, 255);
			) : (
				ui_colora(102, 102, 102, 0.5);
			);
			
			ui_pad2(ui_hpadding()/2, 0);
			ui_split_top(texth);
				ui_padleft();
				ui_padright();
				uix_control_theme == 1/*uix_THEME:BLACK_AND_WHITE*/ ? (
					ui_align(0.5, 0.5);
				) : (
					ui_align(0, 0.5);
				);
				
				ui_push_width(textw + ui_hpadding());
					textl = ui_left();
					textr = ui_right();
					textv = ui_top() + ui_height()/2;
					textw > 0 ? (
						ui_align(0.5, 0.5);
						ui_text(text);
					);
				ui_pop();
			ui_pop();
			ui_padbottom();

			!textw ? textl = textr = ui_left();
			ui_push();
				gfx_x = textr;
				gfx_y = textv;
				uix_control_theme == 1/*uix_THEME:BLACK_AND_WHITE*/ ? (
					uix_dotted_line(textr, textv, ui_right() - 1, textv, 1, 1);
					uix_dotted_line(ui_right() - 1, textv, ui_right() - 1, ui_bottom(), 1, 1);
					uix_dotted_line(ui_right() - 1, ui_bottom(), ui_left(), ui_bottom(), 1, 1);
					uix_dotted_line(ui_left(), ui_bottom(), ui_left(), textv, 1, 1);
					uix_dotted_line(ui_left(), textv, textl, textv, 1, 1);
				) : (
					gfx_lineto(ui_right() - 1, gfx_y);
					gfx_lineto(gfx_x, ui_bottom());
					gfx_lineto(ui_left(), gfx_y);
					gfx_lineto(gfx_x, textv);
					gfx_lineto(textl, gfx_y);
				);
			ui_pop();
		ui_pop();
		ui_pad();
		uix_control_theme == 1/*uix_THEME:BLACK_AND_WHITE*/ ? (
			ui_pad4(0, -1, 0, -1);
		) : (
			ui_pad2(0, -1);
		);
	);
);

