			gfx_measurestr(text, text_w, text_h);
		);
		
		valign = uix_drawconfig_current[14/*uix_DRAWCONFIG:VALIGN*/];
		halign = uix_drawconfig_current[13/*uix_DRAWCONFIG:HALIGN*/];
		gfx_x = ui_left() + (boxwidth - text_w)*halign;
		gfx_y = ui_top() + (boxheight - text_h)*valign;
		
		gfx_drawstr(text);
	);
