		w = box_width*(6*spread_std)/options_spreadsize;
		gfx_rect(x, box_top, w, box_height);

		debug.x = x;
		debug.w = w;
	ui_pop();

	gfx_a = 0.8;
	while (i < box_width) (
		index = floor(i/box_width*options_spreadsize + 0.5);
		density = spread_density[index];
		x = box_left + i;
		y = box_top + (1 - density)*box_height;
		gfx_line(x, y, x, box_top + box_height);
		i += 1;
	);

	ui_press() || ui_drag() ? (
		y = max(0, min(1, 1 - ui_mouse_yratio()));
		index = max(0, min(options_spreadsize - 1, floor(ui_mouse_xratio()*options_spreadsize + 0.5)));

		ui_mouse_down() && !(mouse_cap&8) ? (
			density_last_index = index;
			density_last_value = y;
		);
		spread_density[index] = y;

		i = index;
		while (i != density_last_index) (
			spread_density[i] = density_last_y + (y - density_last_y)*(i - density_last_index)/(index - density_last_index);
			i < density_last_index ? (
				i += 1;
			) : (
				i -= 1;
			);
		);

		density_last_index = index;
		density_last_y = y;
		can_recompute = 1;
		spread_update();
	);
);

