		w = box_width*(2*spread_std)/options_spreadsize;
		gfx_rect(x, box_top, w, box_height);

		x = box_left + box_width*(spread_mean - 2*spread_std)/options_spreadsize;
		w = box_width*(4*spread_std)/options_spreadsize;
		gfx_rect(x, box_top, w, box_height);

